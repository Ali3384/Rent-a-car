<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Rent_a_car.pages.other_pages"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="Rent_a_car.pages.other_pages.CarImages"
        mc:Ignorable="d"
        Title="Zdjęcia " Height="800" Width="1200" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/sedan.png" >
    <Grid>

        <hc:Carousel Name="maincarousel" HorizontalAlignment="Left" Margin="35,54,0,0" VerticalAlignment="Top" Width="265" Height="184" AutoRun="False" ItemsSource="{Binding}">
            <hc:Carousel.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" Width="300"/>
                </DataTemplate>
            </hc:Carousel.ItemTemplate>
        </hc:Carousel>

    </Grid>
</mah:MetroWindow>
