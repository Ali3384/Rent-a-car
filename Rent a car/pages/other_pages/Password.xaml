<mah:MetroWindow x:Class="Rent_a_car.pages.other_pages.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:local="clr-namespace:Rent_a_car.pages.other_pages"
        mc:Ignorable="d"
        Title="Wprowadź hasło" Height="172" Width="349" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/sedan.png">
    <Grid>
        <Label Content="Wprowadź hasło:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Orbitron"/>
        <PasswordBox Name="PasswordTextBox" HorizontalAlignment="Center" Margin="0,41,0,0"  VerticalAlignment="Top" KeyDown="Button_KeyDown" Width="120" PasswordChanged="PasswordTextBox_TextChanged"/>
        <Button Content="Ok" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click" Background="CornflowerBlue" FontFamily="Orbitron" />
        <Label FontFamily="Orbitron" Name="PasswordLabel" Content="Złe hasło" HorizontalAlignment="Left" Margin="3,106,0,0" VerticalAlignment="Top" Foreground="Red" Opacity="1" Visibility="Hidden"/>
    </Grid>
</mah:MetroWindow>
